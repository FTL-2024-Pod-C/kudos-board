generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  category       String
  image          String
  author         String
  cards          Card[]
}

model Card {
  card_id        Int          @id @default(autoincrement())
  board_id       Int
  board          Board        @relation(fields: [board_id], references: [id], onDelete: Cascade)
  title          String
  description    String
  author         String
  gif            String
}
